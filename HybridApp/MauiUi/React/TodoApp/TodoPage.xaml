<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:hwv="clr-namespace:HybridWebView;assembly=HybridWebView"
             x:Class="MauiUi.React.TodoApp.TodoPage">
    <ContentPage.Content>
        <Grid ColumnDefinitions="*" RowDefinitions="Auto,*">
            <Label
                Text="{Binding TodoAppTitle}"
                FontSize="32"
                HorizontalOptions="Center" />

            <hwv:HybridWebView Grid.Row="1" x:Name="ReactTodoWebView" HybridAssetRoot="ReactTodoApp" />
        </Grid>
    </ContentPage.Content>
</ContentPage>