<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TabLayout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TabLayout.Views"
    xmlns:local="clr-namespace:TabLayout">

    <TabBar>
        <ShellContent
            Title="Main"
            Icon="iconblank.png"
            ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent
            Title="Blank"
            Icon="iconblank.png"
            ContentTemplate="{DataTemplate views:BlankPage}" />
        <ShellContent
            Title="ListDetail"
            Icon="iconlistdetail.png"
            ContentTemplate="{DataTemplate views:ListDetailPage}" />
        <ShellContent
            Title="Drawing"
            Icon="icondrawing.png"
            ContentTemplate="{DataTemplate views:DrawingPage}" />
        <ShellContent
            Title="WebView"
            Icon="iconwebview.png"
            ContentTemplate="{DataTemplate views:WebViewPage}" />
        <ShellContent
            Title="Sample"
            Icon="iconsample.png"
            ContentTemplate="{DataTemplate views:SamplePage}" />
        <ShellContent
            Title="Localization"
            Icon="iconlocalization.png"
            ContentTemplate="{DataTemplate views:LocalizationPage}" />
    </TabBar>
</Shell>
